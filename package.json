{
    "name": "wast",
    "description": "WebAssembly(S-expression) support",
    "version": "0.2.0",
    "publisher": "ukyo",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:wast"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "wast",
                "aliases": [
                    "Wast",
                    "wast"
                ],
                "extensions": [
                    ".wast",
                    ".was"
                ],
                "configuration": "./wast.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "wast",
                "scopeName": "source.wast",
                "path": "./syntaxes/wast.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "wast",
                "path": "./snippets/wast.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Wast configuration",
            "properties": {
                "wast.wabtPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "path to the wabt repository root."
                }
            }
        },
        "commands": [
            {
                "command": "wast.build",
                "title": "Wast: Build a wasm binary"
            },
            {
                "command": "wast.test",
                "title": "Wast: Run tests"
            },
            {
                "command": "wast.dump",
                "title": "Wast: Print a hexdump"
            },
            {
                "command": "wast.info",
                "title": "Wast: Print a module info"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "@types/node": "^6.0.40"
    }
}